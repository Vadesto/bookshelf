<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag @book_data[:cover] || "no-cover.png", class: "card-img" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @book_data[:title] %></h5>
        <p class="card-text"><%= @book_data[:description] %></p>
        <p><small class="text-muted">Author(s): <%= @book_data[:authors].join(", ") %></small></p>
        <p><small class="text-muted">Publish date: <%= @book_data[:publish_date] %></small></p>
      </div>
    </div>
  </div>
</div>

<%= button_to "Submit", { controller: "books", action: "submit_import", isbn: @isbn }, method: :post, class: "btn btn-success", form: { class: "inline-form-button" } %>
<%= link_to "Scratch", import_by_isbn_books_path, class: "btn btn-danger ml-1" %>
