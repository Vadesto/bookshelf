<h1>New authors</h1>

<div class="row">
  <% @last_authors.each do |author| %>
  <%= render partial: "/shared/author_link_card", locals: {  author: author, link: author_path(author) } %>
  <% end %>
  <%= render partial: "/shared/link_card", locals: { link: authors_path } %>
</div>

<h1>New books</h1>

<div class="row">
  <% @last_books.each do |book| %>
    <%= render partial: "/shared/book_card_small", locals: { book: book } %>
  <% end %>
  <%= render partial: "/shared/link_card", locals: { link: books_path } %>
</div>
